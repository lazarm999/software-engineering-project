<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userAchievements">

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewAdInAListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/cardAdInAListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_for_ad_in_a_list"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvTitleJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_regular"
            android:inputType="textNoSuggestions|text"
            android:text="TextView"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageView
            android:id="@+id/imgRatingJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/tvGradeJob"
            app:layout_constraintHorizontal_bias="0.334"
            app:layout_constraintStart_toEndOf="@+id/tvTitleJob"
            app:srcCompat="@drawable/ic_users_grade"
            tools:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/tvGradeJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_regular"
            android:inputType="numberSigned|textNoSuggestions"
            android:text="TextView"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tvCommentJob"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/tvCommentJob"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_regular"
            android:foregroundGravity="center"
            android:inputType="date|textNoSuggestions"
            android:text="TextView"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="4dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

