<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.PasswordResetActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgChangePassword"
        android:layout_width="384dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="511dp"
        app:srcCompat="@drawable/error"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="290dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/newPassword"
        android:textColor="@color/lila"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@drawable/border_for_inputs"
        android:fontFamily="@font/roboto_condensed_regular"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/lila"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/newPasswordConfirmation"
        android:textColor="@color/lila"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:background="@drawable/border_for_inputs"
        android:fontFamily="@font/roboto_condensed_regular"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/lila"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblConfirmPassword"
        android:layout_marginStart="85dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:gravity="center"
        android:text="@string/resetPassword"
        android:textColor="@color/background"
        android:textSize="20sp"
        app:backgroundTint="@color/lila"
        android:clickable="true"
        android:focusable="true"
        app:cornerRadius="20dp" />
</RelativeLayout>
</ScrollView>