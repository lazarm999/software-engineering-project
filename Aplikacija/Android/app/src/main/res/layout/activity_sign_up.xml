<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFEE"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="237dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/signup" />

    <TextView
        android:id="@+id/signName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="195dp"
        android:text="@string/signName"
        android:textColor="#7D8CE3"
        android:textSize="9dp" />

    <EditText
        android:id="@+id/signupName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:background="@color/cardview_light_background"
        android:hint="@string/signupName"
        android:inputType="textPersonName"
        android:textColor="#7D8CE3"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/signSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="255dp"
        android:text="@string/signSurname"
        android:textColor="#7D8CE3"
        android:textSize="9dp" />

    <EditText
        android:id="@+id/signupSurname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:background="@color/cardview_light_background"
        android:hint="@string/signupSurname"
        android:inputType="textPersonName"
        android:textColor="#7D8CE3"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/signGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="328dp"
            android:text="@string/gender"
            android:textColor="#7D8CE3"
            android:textSize="9dp" />

        <CheckBox
            android:id="@+id/checkBoxM"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="335dp"
            android:layout_marginBottom="365dp"
            android:text="@string/genderM"
            android:textSize="9sp"
            android:textStyle="bold"
            app:buttonTint="#7D8CE3" />

        <CheckBox
            android:id="@+id/checkBoxF"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="365dp"
            android:text="@string/genderF"
            android:textSize="9sp"
            android:textStyle="bold"
            app:buttonTint="#7D8CE3" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="385dp"
            android:text="@string/username"
            android:textColor="#7D8CE3"
            android:textSize="9dp" />

        <EditText
        android:id="@+id/usernameBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="415dp"
        android:background="@color/cardview_light_background"
        android:hint="@string/usernameBox"
        android:inputType="textPersonName"
        android:textColor="#7D8CE3"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="445dp"
        android:text="@string/email"
        android:textColor="#7D8CE3"
        android:textSize="9dp" />

    <EditText
        android:id="@+id/emailBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="475dp"
        android:background="@color/cardview_light_background"
        android:hint="@string/emailBox"
        android:inputType="textPersonName"
        android:textColor="#7D8CE3"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="505dp"
        android:text="@string/mobile"
        android:textColor="#7D8CE3"
        android:textSize="9dp" />

    <EditText
        android:id="@+id/mobileBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="535dp"
        android:background="@color/cardview_light_background"
        android:hint="@string/mobileBox"
        android:inputType="textPersonName"
        android:textColor="#7D8CE3"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="565dp"
            android:text="@string/signPass"
            android:textColor="#7D8CE3"
            android:textSize="9dp" />

        <EditText
            android:id="@+id/passBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="595dp"
            android:background="@color/cardview_light_background"
            android:hint="@string/signPassBox"
            android:inputType="textPersonName"
            android:textColor="#7D8CE3"
            android:textSize="12dp" />

        <TextView
        android:id="@+id/goLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="660dp"
        android:text="@string/goLog"
        android:textColor="#7D8CE3"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signup"
        android:layout_width="258dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="66dp"
        android:text="@string/signup"
        android:textColor="#FFFFEE"
        android:textSize="14sp"
        app:backgroundTint="#7D8CE3"
        app:cornerRadius="20dp" />
    </RelativeLayout>
</ScrollView>