<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".ui.EditJobAdFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/adTitle"
            android:textColor="@color/lila"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_for_inputs"
            android:ems="10"
            android:fontFamily="@font/roboto_condensed_regular"
            android:hint="@string/adTitle"
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/tvHDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvHDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/adDescriptionPlaceholder"
            android:textColor="@color/lila"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextMultiLine3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_for_inputs"
            android:ems="10"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="start|top"
            android:hint="Describe your job offer in a few sentences.."
            android:inputType="textMultiLine"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/adLocation"
            android:textColor="@color/lila"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumOfPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/adPeopleNeeded"
            android:textColor="@color/lila"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="25dp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_for_inputs"
            android:ems="10"
            android:fontFamily="@font/roboto_condensed_regular"
            android:inputType="numberSigned"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/tvNumOfPeople"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="64dp" />

        <Spinner
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="70dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnApplyChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adApplyChanges"
            android:textColor="@color/background"
            android:textSize="14sp"
            app:backgroundTint="@color/lila"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_apply"
            app:iconPadding="6dp"
            app:iconTint="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="164dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>