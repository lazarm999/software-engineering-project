<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EmployerProfileFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ImageView
            android:id="@+id/imgProfileBackground"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-10dp"
            app:srcCompat="@drawable/profile_background" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_for_inputs"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/editProfile"
            android:textColor="@color/lila"
            android:textSize="12sp"
            app:backgroundTint="@color/background"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_edit_profile"
            app:iconTint="@color/lila"  />

        <ImageView
            android:id="@+id/imgProfileBlank"
            android:layout_width="293dp"
            android:layout_height="166dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="131dp"
            android:layout_marginEnd="59dp"
            android:background="@drawable/border_for_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgProfileBlank"
                android:layout_alignParentTop="true"
                android:layout_marginTop="243dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Lazar"
                android:textColor="@color/lila"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="243dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Minic"
                android:textColor="@color/lila"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vuk_profilna" />


        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txtBadges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="600dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="@string/badges"
                android:textColor="@color/lila"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearBagdges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="640dp"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/btnAchievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="320dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="@string/achievements"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:backgroundTint="@color/teal_200"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_achievements"
                app:iconTint="@color/black"
                app:rippleColor="@color/lila"
                tools:ignore="NotSibling" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtUni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="390dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/companyEmployer"
            android:textColor="@color/lila"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="430dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/phoneStudent"
            android:textColor="@color/lila"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="0653990854"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtInfoStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="470dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/infoStudent"
            android:textColor="@color/lila"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMultilineEditBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="66dp"
            android:background="@drawable/border_for_inputs"
            android:ems="10"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="start|top"
            android:inputType="textMultiLine|textNoSuggestions"
            android:padding="1dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="I am looking for ambitious young people who are ready to work in constructions"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/ratingStudent"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_rate_user"
            app:iconTint="@color/black"
            app:rippleColor="@color/lila" />

        <TextView
            android:id="@+id/txtCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Mladost"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>
</ScrollView>