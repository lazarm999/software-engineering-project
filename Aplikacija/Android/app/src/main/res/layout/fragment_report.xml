<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecommendationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            android:padding="10dp"
            android:layout_below="@+id/linearRecommend"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReportsHeading"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold_italic"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/reportedHeading"
                android:textColor="@color/lila"
                android:textSize="30sp"  />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReports"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>