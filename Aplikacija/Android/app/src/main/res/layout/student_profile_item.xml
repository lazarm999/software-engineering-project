<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imgProfileBackground"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-10dp"
        app:srcCompat="@drawable/profile_background" />

    <Button
        android:id="@+id/BtnEdit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/editProfile"
        android:textColor="@color/lila"
        android:textSize="8sp"
        app:backgroundTint="@color/background"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_edit_profile"
        app:iconTint="@color/lila" />

    <ImageView
        android:id="@+id/imgProfileBlank"
        android:layout_width="293dp"
        android:layout_height="196dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        app:srcCompat="@drawable/common_google_signin_btn_text_light" />

    <TextView
        android:id="@+id/editTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Name Surname"
        android:textColor="@color/lila"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="username"
        android:textColor="@color/lila"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="95dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/avatar" />

    <Button
        android:id="@+id/btnAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/achievements"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="8sp"
        app:backgroundTint="@color/teal_200"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_achievements"
        app:iconTint="@color/common_google_signin_btn_text_dark_focused"
        app:rippleColor="@color/lila" />

    <TextView
        android:id="@+id/txtFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="355dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/facultyStudent"
        android:textColor="@color/lila"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUniversity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="355dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Faculty"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtInfoStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="315dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/infoStudent"
        android:textColor="@color/lila"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtMultilineEditBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginBottom="305dp"
        android:ems="10"
        android:fontFamily="@font/roboto_condensed_regular"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Student's bio"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/badges"
        android:textColor="@color/lila"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TableRow
        android:id="@+id/tbRow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="250dp"
        android:layout_marginRight="250dp"
        android:layout_marginBottom="115dp">

        <ImageButton
            android:id="@+id/imgBtnBadge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/badge1" />

        <ImageButton
            android:id="@+id/imgBtnBadge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/badge2" />
    </TableRow>

    <ImageButton
        android:id="@+id/imgBtnArrowBack"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/ic_arrow_left"
        android:tint="@color/background" />


</RelativeLayout>